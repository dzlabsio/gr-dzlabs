<?xml version="1.0"?>
<block>
    <name>udp_source</name>
    <key>dzlabs_udp_source</key>
    <category>[dzlabs]</category>
    <import>import dzlabs</import>
    <make>dzlabs.udp_source($host, $port)</make>



    <param>
        <name>Host</name>
        <key>host</key>
        <type>string</type>
    </param>

    <param>
        <name>Port</name>
        <key>port</key>
        <type>int</type>
    </param>



    <source>
        <name>out</name>
        <type>message</type>
        <optional>0</optional>
    </source>



</block>
